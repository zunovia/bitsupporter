<table class='table table-hover table-inverse'>
  <h2>投稿一覧</h2> <h5>全投稿数：<%= @posts.count %>　投稿</h5>
  <thead>
    <tr>
      <th></th>
      <th>投稿者名</th>
      <th>タイトル</th>
      <th>投稿内容</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to end_user_path(post.end_user.id) do %>
          <%= image_tag post.end_user.get_profile_image(50,50) %>
          <% end %>
        </td>
        <td><%= link_to(post.end_user.name) %></td>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= link_to '削除', post_path(post.id), method: :delete, class: "post_#{post.id}" %></td>
    <% end %>
  </tbody>
</table>