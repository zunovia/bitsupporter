<table>
  <tbody>
      <% post.post_comments.each do |post_comment| %>
      <tr>

        <td>
          <%= link_to user_page_path(post_comment.end_user) do %>
            <%= image_tag post_comment.end_user.get_profile_image(100,100) %><br>
            <%= post_comment.end_user.name %>
          <% end %>
        </td>
        <td><%= post_comment.comment %></td>
        <td>
          <% if post_comment.end_user == current_end_user %>
            <%= link_to "Destroy", post_post_comment_path(post, post_comment), method: :delete, class: "btn btn-danger pull-right", remote: true %>
          <% end %>
        </td>
      </tr>
      <% end %>
  </tbody>
</table>